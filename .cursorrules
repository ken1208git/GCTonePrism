project_style:
  language: japanese
  tone: friendly-precise
  code:
    # Godot v4 GDScript の方針
    indent: tab
    comments: explain-why
    naming:
      variables: full_words
      functions: verb_phrase
  ai_context:
    primary: README.md
    secondary:
      - cursor_log.md
    must_read_files:
      - README.md
      - CURSOR_GUIDE.md
      - project.godot
      - Global.gd
  guardrails:
    - 日本語で回答すること
    - Godot 4.2 API を前提にすること
    - ファイル/関数/クラス名はバッククォートで明示すること
    - コードの説明は短く、必要十分に
  do_not_edit:
    - assets/**
    - export/**
    - dist/**
    - build/**
  runtime_commands:
    preferred_shell: powershell
    noninteractive: true
    windows: true

